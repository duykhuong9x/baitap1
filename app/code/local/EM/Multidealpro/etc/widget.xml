<?xml version="1.0"?>
<widgets>
    <multidealpro_widget type="multidealpro/widgets">
        <name>EM Multideal Products</name>
        <parameters>
            <deal_type translate="label">
                <label>Deal type show</label>
                <visible>1</visible>
				<required>1</required>
                <type>multiselect</type>
                <source_model>multidealpro/deal</source_model>
				<sort_order>0</sort_order>
            </deal_type>

            <limit_count>
                <label>Limit Count</label>
                <description>The numbers of product will be show</description>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>10</value>
            </limit_count>

			<column_count>
                <label>Column Count</label>
                <description>The numbers of products per row. if not specified or 0, ul will hold all li.item</description>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
            </column_count>

            <order_by>
                <label>Order by</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <order_by_1 translate="label">
                        <value>name asc</value>
                        <label>Name ASC</label>
                    </order_by_1>
					<order_by_11 translate="label">
                        <value>name desc</value>
                        <label>Name DESC</label>
                    </order_by_11>
                    <order_by_3 translate="label">
                        <value>price asc</value>
                        <label>Price ASC</label>
                    </order_by_3>
                    <order_by_31 translate="label">
                        <value>price desc</value>
                        <label>Price DESC</label>
                    </order_by_31>
                </values>
            </order_by>

            <custom_class>
                <label>Custom Wrapper Class</label>	
    			<visible>1</visible>
                <required>0</required>
    			<type>text</type>
            </custom_class>

			<frontend_title>
				<label>Frontend Title</label>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<sort_order>6</sort_order>
			</frontend_title>

			<item_class>
                <label>Item Class Custom</label>
                <description>Custom class for li item</description>
				<visible>1</visible>
				<type>text</type>
            </item_class>

            <frontend_description>
				<label>Frontend Description</label>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
			</frontend_description>

			<item_width>
                <label>Item Width</label>
				<description>unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_width>

            <item_height>
                <label>Item Height</label>
				<description>unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_height>

			<item_spacing>
                <label>Item Spacing</label>
				<description>Spacing between 2 items. unit: px</description>
				<visible>1</visible>
                <required>0</required>
				<type>text</type>
				<value></value>
            </item_spacing>

            <thumbnail_width>
                <label>Thumbnail Width</label>
				<visible>1</visible>
                <required>1</required>
				<type>text</type>
				<value>150</value>
            </thumbnail_width>

            <thumbnail_height>
                <label>Thumbnail Height</label>
				<visible>1</visible>
                <required>1</required>
				<type>text</type>
				<value>150</value>
            </thumbnail_height>

            <show_product_name>
                <label>Show Product's Name</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_product_name>

			<show_price>
                <label>Show Product's Price</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_price>

            <show_clock>
                <label>Show Clock</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_clock>

            <show_qty>
                <label>Show Remaining QTY</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_qty>

			<show_addtocart>
                <label>Show Add to cart button</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_addtocart>

            <show_addto>
                <label>Show Add to wishlist-compare button</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_addto>

			<show_label>
                <label>Show EM Label</label>
				<visible>1</visible>
                <required>0</required>
				<type>select</type>
				<values>
                    <yes translate="label">
                        <value>true</value>
                        <label>Yes</label>
                    </yes>
                    <no translate="label">
                        <value>false</value>
                        <label>No</label>
                    </no>
                </values>
            </show_label>

            <choose_template translate="label">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <list translate="label">
                        <value>em_multidealpro/list.phtml</value>
                        <label>List Multidealpro products</label>
                    </list>
					<grid translate="label">
                        <value>em_multidealpro/grid.phtml</value>
                        <label>Grid Multidealpro products</label>
                    </grid>
					<cust translate="label">
                        <value>custom_template</value>
                        <label>Display as custom template ...</label>
                    </cust>
                </values>
            </choose_template>

			<custom_theme>
				<label>Custom template :</label>
				<description>Effect only when selecting "Display as custom template. By default, using 'em_multidealpro/custom_template.phtml'"</description>
				<visible>1</visible>
				<type>text</type>
				<value></value>
			</custom_theme>

        </parameters>
    </multidealpro_widget>
</widgets>
